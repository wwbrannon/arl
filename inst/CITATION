citHeader("To cite rye in publications use:")

citEntry(
  entry = "Manual",
  title = "rye: A Lisp Dialect for R",
  author = person("William", "Brannon"),
  year = format(Sys.Date(), "%Y"),
  note = sprintf("R package version %s", utils::packageVersion("rye")),
  url = "https://github.com/wwbrannon/rye",
  textVersion = sprintf(
    "William Brannon (%s). rye: A Lisp Dialect for R. R package version %s. https://github.com/wwbrannon/rye",
    format(Sys.Date(), "%Y"),
    utils::packageVersion("rye")
  )
)
